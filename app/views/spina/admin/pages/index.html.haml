.well
  %h1 Pagina's

.sortable-list-container
  %ol.sortable{data: {:"update-url" => sort_admin_pages_url }}
    - @pages.each do |page|
      %li{id: "page_#{page.id}"}
        %div
          %table{style: 'width: 100%'}
            %tr
              %td= link_to page, edit_admin_page_path(page)
              %td{style: 'text-align: right; padding-right: 32px'}
                = link_to "Bewerken", edit_admin_page_path(page), class: 'button button-plain', data: {icon: 'p'}
        %ol
          - page.pages.each do |child_page|
            %li{id: "page_#{child_page.id}"}
              %div
                %table{style: 'width: 100%'}
                  %tr
                    %td= link_to child_page, edit_admin_page_path(child_page)
                    %td{style: 'text-align: right; padding-right: 32px'} 
                      = link_to "Bewerken", edit_admin_page_path(child_page), class: 'button button-plain', data: {icon: 'p'}

.actions
  .button-well
    = link_to "Nieuwe pagina", new_admin_page_path, class: 'button button-primary', data: {icon: '&'}
