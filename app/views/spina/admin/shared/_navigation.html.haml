%nav#primary
  %ul
    %li{class: ('active' if %w[pages photos].include? controller_name)}
      = link_to "", admin_pages_path, data: {icon: 'y'}

    %li{class: ('active' if %w[inquiries].include? controller_name)}
      - if @new_messages.present?
        = link_to "", admin_inquiries_path, data: {icon: 'A', badge: "#{@new_messages.size}"}
      - else
        = link_to "", admin_inquiries_path, data: {icon: 'A'}

    %li{class: ('active' if %w[accounts users].include? controller_name)}
      = link_to "", edit_admin_account_path, data: {icon: 'f'}

    %li.bottom
      = link_to "", admin_logout_path, data: {icon: 'h', :"no-turbolink" => true}
