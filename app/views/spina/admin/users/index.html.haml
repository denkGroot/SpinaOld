.well
  %h1 Gebruikers

.table-container
  %table.table
    %thead
      %tr
        %th Naam
        %th Rol
        %th Laatst ingelogd
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user, edit_admin_user_path(user)
          %td= user.admin? ? "Beheerder" : "Gebruiker"
          %td= time_ago_in_words(user.last_logged_in) + " geleden"
          %td= link_to "Bewerken", edit_admin_user_path(user), class: 'button button-plain', data: {icon: 'p'}

.actions
  .button-well
    = link_to "Nieuwe gebruiker", new_admin_user_path, class: 'button button-primary', data: {icon: '&'}