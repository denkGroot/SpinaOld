= photo_collection_form.fields_for :page_partable, photo_collection_form.object.page_partable do |form|
  = link_to photo_collection_select_admin_photos_path(form.object_name), remote: true, class: "media_picker" do
    - if form.object.photos.any?
      - form.object.photos.each do |photo|
        .image
          = image_tag photo.file.thumb
    - else
      .image.placeholder
        %span{data: {icon: 't'}} Kies uit bibliotheek
    = form.hidden_field "photo_ids", value: form.object.photo_ids.join(",")
