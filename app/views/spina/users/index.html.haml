.well
  %h1 Gebruikers

.table-container
  %table.table
    %thead
      %tr
        %th Naam
        %th Rol
        %th

    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user, edit_user_path(user)
          %td= user.admin? ? "Beheerder" : "Gebruiker"
          %td= link_to "Bewerken", edit_user_path(user), class: 'button button-plain', data: {icon: 'p'}

.actions
  .button-well
    = link_to "Nieuwe gebruiker", new_user_path, class: 'button button-primary', data: {icon: '&'}