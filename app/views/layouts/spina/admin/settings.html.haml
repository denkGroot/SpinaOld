- content_for :secondary_navigation do
  %nav#secondary
    %h1 Voorkeuren

    %ul
      %li{class: ('active' if params[:action] == 'edit' && params[:controller] == 'spina/admin/accounts')}
        = link_to edit_admin_account_path, data: {icon: 'x'} do
          Algemene gegevens
          %small Persoonlijke instellingen

      %li{class: ('active' if params[:action] == 'social')}
        = link_to social_admin_account_path, data: {icon: 'D'} do
          Social media
          %small Facebook en Twitter accounts

      %li{class: ('active' if params[:action] == 'analytics')}
        = link_to analytics_admin_account_path, data: {icon: 'E'} do
          Statistieken
          %small Op de hoogte van alle statistieken

- content_for :content do
  = yield

= render template: "layouts/spina/admin/application"